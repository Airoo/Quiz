<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.airo.controller.tabs.Test">
    <children>
        <VBox>
            <children>
                <HBox prefHeight="50.0" prefWidth="800.0">
                    <children>
                        <Button minWidth="150.0" mnemonicParsing="false" onAction="#startTest" prefHeight="30.0"
                                prefWidth="100.0" text="Начать тест">
                            <HBox.margin>
                                <Insets right="10.0"/>
                            </HBox.margin>
                        </Button>
                        <Button minWidth="150.0" mnemonicParsing="false" onAction="#finishTest" prefHeight="30.0"
                                text="Закончить тест">
                            <HBox.margin>
                                <Insets right="300.0"/>
                            </HBox.margin>
                        </Button>
                        <Button layoutX="670.0" layoutY="20.0" mnemonicParsing="false" onAction="#backBtn"
                                prefHeight="30.0" prefWidth="50.0" text="&lt;">
                            <HBox.margin>
                                <Insets right="10.0"/>
                            </HBox.margin>
                        </Button>
                        <Button layoutX="670.0" layoutY="20.0" mnemonicParsing="false" onAction="#openBtn"
                                prefHeight="30.0" prefWidth="50.0" text="-">
                            <HBox.margin>
                                <Insets right="10.0"/>
                            </HBox.margin>
                        </Button>
                        <Button layoutX="670.0" layoutY="20.0" mnemonicParsing="false" onAction="#nextBtn"
                                prefHeight="30.0" prefWidth="50.0" text="&gt;"/>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </HBox>
                <HBox alignment="TOP_RIGHT" layoutX="10.0" layoutY="10.0" prefWidth="800.0">
                    <children>
                        <Separator prefWidth="800.0"/>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </HBox>
                <HBox alignment="TOP_RIGHT" layoutX="10.0" layoutY="60.0" prefWidth="800.0">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                    <children>
                        <TextArea fx:id="textArea" disable="true" editable="false" prefHeight="300.0"
                                  prefWidth="780.0"/>
                    </children>
                </HBox>
                <HBox alignment="TOP_RIGHT" layoutX="10.0" layoutY="10.0" prefHeight="50.0" prefWidth="800.0">
                    <children>
                        <Label alignment="CENTER" prefWidth="50.0" text="score" fx:id="score" visible="false"/>
                        <Label alignment="CENTER" layoutX="750.0" layoutY="20.0" prefWidth="50.0" text="time"
                               fx:id="time" visible="false"/>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
